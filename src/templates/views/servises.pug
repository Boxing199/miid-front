              a.content_two_a(href="#") подробнее
                img.content_two_a_arrow(src="assets/images/about_company/Arrow.png")
            div.content_two_right.content_two_right_servises
              div.content_two_image_block.content_two_image_block_servises
                img.content_two_img(src="assets/images/servises/servises_img_1.png")
          div.content_two_blocks
            div.content_two_right.content_two_right_left
              div.content_two_image_block_position
                img.content_two_img_two(src="assets/images/servises/servises_img_2.png")
