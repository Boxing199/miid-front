extends ../base/layout

block content
  div.region_services
    div.services_wrapper
      .container
        div.services
          div.cooperation_description
            .title
              .title_content
                | Сопровождение всех видов
                br
                span.title_green сделок с недвижимостью

            ul.services_list
              li.services_list_item Подбор объекта недвижимости;
              li.services_list_item Проверка юридической чистоты объекта;
              li.services_list_item Продажа объекта;
              li.services_list_item Подготовка документов по выбранному объекту для банка и регистрационной палаты;
            a.button(href="#")
              span подробнее
              i.icon.icon-arrow
          div.boximage
            div.boximage_border
            img.boximage_block(src="assets/images/services/services_img_1.png")


        div.services.right
          div.boximage.right
            div.boximage_border.services_hypothec_block
            img.boximage_block(src="assets/images/services/services_img_2.png")
          div.cooperation_description
            .title.right
              .title_content
                | Одобрение
                br
                span.title_green ипотеки

            ul.services_list
              li.services_list_item Проверка кредитной истории;
              li.services_list_item Одобрение ипотечной заявки;
              li.services_list_item Согласование выгодных ипотечных условий кредитования;
              li.services_list_item Расчёт ежемесячного платежа по кредиту и дополнительных расходов;
              li.services_list_item Одобрение выбранного объекта в банке;
              li.services_list_item Ипотека без первоначального взноса;
              li.services_list_item Ипотека + материнский капитал.

            a.button(href="#")
              span подробнее
              i.icon.icon-arrow

        div.services
          div.cooperation_description
            .title
              .title_content
                | Страховые
                br
                span.title_green услуги

            ul.services_list
              li.services_list_item Ипотечное страхование;
              li.services_list_item Страхование жизни и здоровья заёмщика;
              li.services_list_item Страхование объекта залога;
              li.services_list_item Страхование титула;
              li.services_list_item Прочие виды страхования, не связанные с ипотекой.
            a.button(href="#")
              span подробнее
              i.icon.icon-arrow

          div.boximage.left
            div.boximage_border
            img.boximage_block(src="assets/images/services/services_img_3.png")

        div.services.right

          div.boximage.right
            div.boximage_border
            img.boximage_block(src="assets/images/services/services_img_4.png")
          div.cooperation_description
            .title.right
              .title_content
                | услуги
                br
                span.title_green застройщикам

            ul.services_list
              li.services_list_item Аккредитация застройщиков в банке. Расшифровка: подготовка пакета документов для банков-партнёров на предмет ипотечного кредитования розничных клиентов застройщика;
              li.services_list_item Организация отдела продаж на объекте.
            a.button(href="#")
              span подробнее
              i.icon.icon-arrow

        div.services
          div.cooperation_description

            .title
              .title_content
                | продажа
                br
                span.title_green недвижимости

            ul.services_list
              li.services_list_item Обмен базой объектов недвижимости
              li.services_list_item Одобрение ипотечных кредитов
            a.button(href="#")
              span подробнее
              i.icon.icon-arrow
          div.boximage.left
            div.boximage_border.services_property_block
            img.boximage_block(src="assets/images/services/services_img_5.png")
